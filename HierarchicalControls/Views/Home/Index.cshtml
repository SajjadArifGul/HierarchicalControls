@using HierarchicalControls.Code
@using HierarchicalControls.Models

@model List<HierarchicalItem>

@{
    ViewBag.Title = "Home Page";
}

@if (Model != null)
{
    @Html.HierarchicalDropDown(Model)
    <hr />
    @Html.HierarchicalTreeView(Model)
    <hr />
    @Html.HierarchicalAccordions(Model)
}

<script src="~/Scripts/hierarchicalcontrols.js"></script>

