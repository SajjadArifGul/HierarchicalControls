@using HierarchicalControls.Code
@using HierarchicalControls.Models

@model List<HierarchicalControls.Models.HierarchicalItem>

@{
    ViewBag.Title = "Home Page";
}

@if (Model != null)
{
	@Html.HierarchicalDropDown("hierarchicalDropDown", "HierarchicalDropDown", Model)
}

<script>
	$(".hierarchicalDropDown li span").click(function (event) {
		if ($(this).hasClass("hasChilds")) {
			$(this).toggleClass("fa-plus-square");
			$(this).toggleClass("fa-minus-square");

			$(this).siblings("ul").toggle();
		}

		$(this).toggleClass("selected");

		event.stopPropagation();
	});
</script>